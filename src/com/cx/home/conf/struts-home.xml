<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="home-action" namespace="/" extends="struts-default">

        <!--配置主页跳转,home_* 跳到index页面-->
        <action name="home_*" class="com.cx.home.action.HomeAction" method="{1}">
            <result name="home">/WEB-INF/sys/index.jsp</result>
        </action>

    </package>

</struts>